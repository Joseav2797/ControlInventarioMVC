@{
    ViewData["Title"] = "Bienvenido al Control de Inventario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            text-align: center;
            padding: 50px;
        }

        h1 {
            color: #4CAF50;
        }

        .navigation {
            margin-top: 30px;
        }

        .nav-btn {
            background-color: #4CAF50;
            color: white;
            padding: 15px 25px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px;
            transition: background-color 0.3s;
        }

            .nav-btn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <h1>¡Bienvenido al Control de Inventario!</h1>
    <p>Utiliza las opciones de navegación para gestionar el inventario, registros y movimientos.</p>

    <div class="navigation">
        <button class="nav-btn" onclick="window.location.href='/Articulos/Index'">Ver Artículos</button>
         <button class="nav-btn" onclick="window.location.href='/Articulos/InventarioActual'">Ver Inventario de Artículos</button>
        <button class="nav-btn" onclick="window.location.href='/Ubicaciones/Index'">Ver Ubicaciones</button>
        <button class="nav-btn" onclick="window.location.href='/MovimientosInventario/Index'">Ver Movimientos</button>
        
    </div>

    <script>
      
        window.onload = function() {
            
            if (!localStorage.getItem('welcomeMessageShown')) {
                Swal.fire({
                    title: '¡Bienvenido al Sistema de Control de Inventario!',
                    text: 'Gestiona tus artículos, ubicaciones y movimientos de manera eficiente.',
                    icon: 'success',
                    confirmButtonText: '¡Empezar!'
                }).then(() => {
                    
                    localStorage.setItem('welcomeMessageShown', 'true');
                });
            }
        }
    </script>

</body>
</html>
